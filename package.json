{
  "name": "htte",
  "version": "0.2.0",
  "description": "Declarative http test framework ",
  "main": "./dist/index.js",
  "bin": {
    "htte": "./dist/bin/htte.js"
  },
  "scripts": {
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "deps": "npm-check -u",
    "lint": "eslint --ext=.js src test",
    "lint:fix": "eslint --fix --ext=.js src test",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "jest --coverage --no-cache --testPathPattern unit --testPathPattern __tests__",
    "compile": "babel -q -d ./dist ./src",
    "pretest:int": "git submodule update --init && npm --silent --prefix ./test/fixtures/realworld install --production",
    "test:int": "jest --testPathPattern integration --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sigoden/htte.git"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "htte",
    "http",
    "declartive",
    "test",
    "testing",
    "gabbi",
    "postman",
    "framework"
  ],
  "author": "sigoden huang <sigoden@gmail.com> (https://sigoden.com)",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "js-yaml": "^3.11.0",
    "jsonpath": "^1.0.0",
    "lodash": "^4.17.5",
    "mkdir": "0.0.2",
    "recursive-readdir-sync": "^1.0.6",
    "yargs": "^11.0.0"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/fixtures/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "rootDir": "./src",
    "roots": [
      "../test",
      "./plugins"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ]
    ],
    "ignore": "__tests__"
  },
  "engine": {
    "node": ">=4"
  },
  "files": [
    "dist",
    "README.md",
    "README.zh.md"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2"
  }
}
